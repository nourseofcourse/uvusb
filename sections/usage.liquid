<section class="section  {{ section.settings.class }}">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-md-5">
        <div class="section__heading  mb-0">
        {% if section.settings.section_title %}
          <h2 class="section__title  section__title--dec">{{ section.settings.section_title }}</h2>
        {% endif %}
        {% if section.settings.supporting_text %}
          {{ section.settings.supporting_text }}
        {% endif %}
        </div>
      </div>
      <div class="col-md-7  text-center">
        <img src="{{ 'environmental-group.jpg' | file_url }}" alt="">
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Useage",
    "class": "index-section",
    "settings": [
      {
        "type": "checkbox",
        "id": "full_width",
        "label": "Width display"
      },
      {
        "type": "text",
        "id": "section_title",
        "label": "Heading",
        "default": "Insert a heading"
      },
      {
        "type": "richtext",
        "id": "supporting_text",
        "label": "Supporting Text",
        "default": "<p>Describe a product, share announcements, or welcome customers to your store.</p>"
      }
    ],
    "presets": [
      {
        "name": "Useage",
        "category": "UV - Content"
      }
    ]
  }
  {% endschema %}